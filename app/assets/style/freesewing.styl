// Disable the color pack to avoid bloat
$color-pack = false

// Primary color is set in nuxt.conf.js
// $primary = #00ff00

/*
 *
 * Vuetify's typography is below our standards
 * So here's a bunch of overrides to fix that
 *
 */
// Native font stack to avoid loading external font
$body-font-family = -apple-system, system-ui, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif

// Set standard font size and line height
$font-size-root = 16px
$line-height-root = 1.3

// Set heading styles
h1, h2, h3, h4, h5, h6
  margin: 0.5rem 0 1rem 0
h1 
  font-size: 112px
  font-weight: 300
  line-height: 1
  letter-spacing: -.04em 
h2 
  font-size: 56px
  font-weight: 400
  line-height: 1.35
  letter-spacing: -.02em 
h3 
  font-size: 45px
  font-weight: 400
  line-height: 48px
  letter-spacing: normal
h4 
  font-size: 34px
  font-weight: 400
  line-height: 40px
  letter-spacing: normal
h5
  font-size: 24px
  font-weight: 400
  line-height: 32px
  letter-spacing: normal
h6 
  font-size: 20px
  font-weight: 500
  line-height: 1
  letter-spacing: .02em

// Bump the navigation drawer font size
$navigation-drawer-item-font-size = 24px

// Use local icon font rather than fetch from Google
@font-face {
  font-family: 'Material Icons';
  font-style: normal;
  font-weight: 400;
  src: local('Material Icons'),
    local('MaterialIcons-Regular'),
    url(/fonts/MaterialIcons-Regular.woff2) format('woff2'),
    url(/fonts/MaterialIcons-Regular.woff) format('woff'),
    url(/fonts/MaterialIcons-Regular.ttf) format('truetype');
}

/*
 *
 * All done with Freesewing specific settings
 *
 */
@import '~vuetify/src/stylus/main'

